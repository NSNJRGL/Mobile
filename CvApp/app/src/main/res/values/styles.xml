<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- * * * * * * * * * * * BASE THEME * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Customize app's theme here. -->
        <item name="android:windowContentTransitions">true</item>

        <!-- * * * * * * BASE COLORS * * * * * * -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Background -->
        <item name="colorSurface">@color/colorSurface</item>

        <!-- Title -->
        <item name="colorOnPrimarySurface">@color/colorOnPrimarySurface</item>

        <!-- Text -->
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Border -->
        <item name="colorOnSecondary">@color/colorBorder</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>

        <!-- * * * * * * STYLES * * * * * * -->
        <!-- ACTION MENU -->
        <item name="android:popupMenuStyle">@style/ToolbarPopupMenuStyle</item>

        <!-- BOTTOM NAVIGATION -->
        <item name="bottomNavigationStyle">@style/BottomMenuStyle</item>

        <!-- HEADLINE -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Headline</item>

        <!-- BODY 1 -->
        <item name="textAppearanceBody1">@style/TextAppearance.Body1</item>

        <!-- BOTTOM SHEET -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>

    <!-- * * * * * * * * * * * TEXT APPEARANCE * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *  -->

    <!-- HEADLINE - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <style name="TextAppearance.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- BODY TEXT1 - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <style name="TextAppearance.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- * * * * * * * * * * * TOOLBAR * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * -->

    <!-- Toolbar style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <style name="ToolbarStyle" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <!-- Toolbar Title style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Headline">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- Toolbar Sub Title style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <style name="ToolbarSubTitleStyle" parent="ToolbarTitleStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Popup Menu style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  -->
    <style name="ToolbarPopupMenuStyle" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>


    <!-- * * * * * * * * * * * MENU * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * -->

    <!-- Bottom Menu style - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  - -->
    <style name="BottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/colorSurface</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
        <item name="itemTextAppearanceActive">@style/BottomMenuActiveTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomMenuActiveTextStyle</item>
    </style>

    <!-- Bottom Menu text style (active) - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  - -->
    <style name="BottomMenuActiveTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Side Menu text style (active) - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -  - -->
    <style name="SideMenuTextStyle" parent="BottomMenuActiveTextStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!-- * * * * * * * * * * * BOTTOM SHEET * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * -->

    <!-- BottomSheetDialog - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <!-- ModalBottomSheet - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

</resources>
